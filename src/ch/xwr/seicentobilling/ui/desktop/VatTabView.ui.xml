<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?xdevuiml version="1.0"?>
<?template BROWSER_XGA?>
<?import ??>
<?import ch.xwr.seicentobilling.business.LovState.State?>
<?import ch.xwr.seicentobilling.entities.Vat?>
<?import com.xdev.ui.XdevButton?>
<?import com.xdev.ui.XdevCheckBox?>
<?import com.xdev.ui.XdevFieldGroup?>
<?import com.xdev.ui.XdevGridLayout?>
<?import com.xdev.ui.XdevHorizontalLayout?>
<?import com.xdev.ui.XdevHorizontalSplitPanel?>
<?import com.xdev.ui.XdevLabel?>
<?import com.xdev.ui.XdevTextField?>
<?import com.xdev.ui.XdevVerticalLayout?>
<?import com.xdev.ui.XdevView?>
<?import com.xdev.ui.entitycomponent.combobox.XdevComboBox?>
<?import com.xdev.ui.entitycomponent.table.XdevTable?>
<?import com.xdev.ui.filter.XdevContainerFilterComponent?>
<?import java.lang.Boolean?>
<?import java.lang.Double?>
<?import java.lang.String?>
<XdevView xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="VatTabView">
    <x:constraints zpos="0" width="100%" height="100%" />
    <XdevGridLayout x:name="gridLayout" margin="">
        <x:constraints zpos="0" width="100%" height="100%" />
        <XdevHorizontalSplitPanel styleName="large" x:name="horizontalSplitPanel">
            <x:constraints gridx="1" gridy="1" weighty="1.0" weightx="1.0" width="100%" height="100%" />
            <XdevVerticalLayout x:name="verticalLayout" margin="">
                <x:constraints splitPos="FIRST" width="100%" height="100%" />
                <XdevContainerFilterComponent x:searchableProperties="vatName,vatSign" x:name="containerFilterComponent" x:filterableProperties="vatName,vatState,vatInclude" x:container="table">
                    <x:constraints weighty="0.0" width="100%" height="0%" />
                </XdevContainerFilterComponent>
                <XdevHorizontalLayout spacing="false" x:name="horizontalLayout" margin="">
                    <x:constraints weighty="0.0" width="100%" alignment="MIDDLE_LEFT" height="0px" />
                    <XdevButton icon="WebContent/WEB-INF/resources/images/new1_16.png" description="Neuen Datensatz anlegen" x:name="cmdNew">
                        <x:constraints weightx="0.0" width="0px" height="0px" />
                        <x:event>click.buttonClick</x:event>
                    </XdevButton>
                    <XdevButton icon="WebContent/WEB-INF/resources/images/delete3_16.png" x:name="cmdDelete">
                        <x:constraints weightx="0.0" width="0px" height="0px" />
                        <x:event>click.buttonClick</x:event>
                    </XdevButton>
                    <XdevButton icon="WebContent/WEB-INF/resources/images/reload2.png" x:name="cmdReload">
                        <x:constraints weightx="0.0" width="0px" height="0px" />
                        <x:event>click.buttonClick</x:event>
                    </XdevButton>
                    <XdevButton icon="WebContent/WEB-INF/resources/images/info_small.jpg" x:name="cmdInfo">
                        <x:constraints weightx="0.0" width="0px" height="0px" />
                        <x:event>click.buttonClick</x:event>
                    </XdevButton>
                </XdevHorizontalLayout>
                <XdevTable x:connectedForm="fieldGroup" x:name="table" x:entity="Vat" x:autoQuery="false">
                    <x:entityProperties>
                        <entry type="String" property="vatName" />
                        <entry type="Double" property="vatRate">
                            <converter maximumFractionDigits="2" numberType="Double" numberFormatType="number" minimumFractionDigits="2" currency="default" converterType="STRING_TO_NUMBER" locale="default" />
                        </entry>
                        <entry type="String" property="vatSign" />
                        <entry type="Boolean" property="vatInclude" />
                        <entry type="State" property="vatState" />
                    </x:entityProperties>
                    <x:constraints weighty="1.0" width="100%" height="100%" />
                    <x:typeArguments>
                        <typeArgument type="Vat" />
                    </x:typeArguments>
                    <x:data methodName="findAll" />
                </XdevTable>
            </XdevVerticalLayout>
            <XdevGridLayout x:name="form">
                <x:constraints splitPos="SECOND" width="100%" height="100%" />
                <XdevComboBox x:name="comboBoxState">
                    <x:constraints gridx="2" gridy="5" weighty="0.0" weightx="1.0" width="0px" height="0px" />
                    <x:typeArguments>
                        <typeArgument type="?" />
                    </x:typeArguments>
                </XdevComboBox>
                <XdevFieldGroup x:name="fieldGroup" x:entityType="Vat">
                    <x:typeArguments>
                        <typeArgument type="Vat" />
                    </x:typeArguments>
                    <x:fields>
                        <entry name="txtVatName" property="vatName" />
                        <entry name="txtVatRate" property="vatRate" />
                        <entry name="txtVatSign" property="vatSign" />
                        <entry name="chkVatInclude" property="vatInclude" />
                        <entry name="comboBoxState" property="vatState" />
                    </x:fields>
                </XdevFieldGroup>
                <XdevLabel x:name="lblVatName" value="Name">
                    <x:constraints gridx="1" gridy="1" weighty="0.0" weightx="0.0" width="0px" height="0px" />
                </XdevLabel>
                <XdevTextField columns="5" tabIndex="1" x:name="txtVatName">
                    <x:constraints gridx="2" gridy="1" weighty="0.0" weightx="1.0" width="100%" height="0px" />
                </XdevTextField>
                <XdevLabel x:name="lblVatRate" value="Rate">
                    <x:constraints gridx="1" gridy="2" weighty="0.0" weightx="0.0" width="0px" height="0px" />
                </XdevLabel>
                <XdevTextField columns="5" tabIndex="2" x:name="txtVatRate">
                    <converter maximumFractionDigits="2" numberType="Double" numberFormatType="number" minimumFractionDigits="2" currency="default" converterType="STRING_TO_NUMBER" locale="default" />
                    <x:constraints gridx="2" gridy="2" weighty="0.0" weightx="1.0" width="100%" height="0px" />
                </XdevTextField>
                <XdevLabel x:name="lblVatSign" value="Sign">
                    <x:constraints gridx="1" gridy="3" weighty="0.0" weightx="0.0" width="0px" height="0px" />
                </XdevLabel>
                <XdevTextField columns="5" tabIndex="3" x:name="txtVatSign">
                    <x:constraints gridx="2" gridy="3" weighty="0.0" weightx="1.0" width="100%" height="0px" />
                </XdevTextField>
                <XdevLabel x:name="lblVatInclude" value="Include">
                    <x:constraints gridx="1" gridy="4" weighty="0.0" weightx="0.0" width="0px" height="0px" />
                </XdevLabel>
                <XdevCheckBox caption="" tabIndex="4" x:name="chkVatInclude">
                    <x:constraints gridx="2" gridy="4" weighty="0.0" weightx="1.0" width="100%" height="0px" />
                </XdevCheckBox>
                <XdevLabel x:name="lblVatState" value="State">
                    <x:constraints gridx="1" gridy="5" weighty="0.0" weightx="0.0" width="0px" height="0px" />
                </XdevLabel>
                <XdevHorizontalLayout x:name="horizontalLayout2" margin="">
                    <x:constraints gridx="1" gridy="6" weighty="0.0" weightx="0.0" width="0px" alignment="TOP_CENTER" gridWidth="2" height="0px" />
                    <XdevButton icon="WebContent/WEB-INF/resources/images/save1.png" caption="Save" tabIndex="8" x:name="cmdSave">
                        <x:constraints weightx="0.0" width="0px" alignment="MIDDLE_LEFT" height="0px" />
                        <x:event>click.buttonClick</x:event>
                    </XdevButton>
                    <XdevButton icon="WebContent/WEB-INF/resources/images/cancel1.png" caption="Reset" tabIndex="7" x:name="cmdReset">
                        <x:constraints weightx="0.0" width="0px" alignment="MIDDLE_LEFT" height="0px" />
                        <x:event>click.buttonClick</x:event>
                    </XdevButton>
                </XdevHorizontalLayout>
            </XdevGridLayout>
        </XdevHorizontalSplitPanel>
    </XdevGridLayout>
</XdevView>

